<%= form_with(model: to_do) do |form| %>
  <% if to_do.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(to_do.errors.count, "error") %> prohibited this to_do from being saved:</h2>

      <ul>
        <% to_do.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :task %>
    <%= form.text_field :task %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_select :due_date %>
  </div>

  <div class="field">
    <%= form.label :due_time %>
    <%= form.time_select :due_time %>
  </div>

  <div class="field">
    <%= form.label :important %>
    <%= form.check_box :important %>
  </div>

  <div class="field">
    <%= form.label :repeat %>
    <%= form.check_box :repeat %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
